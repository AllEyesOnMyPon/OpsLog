{
  "__inputs": [
    { "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus", "pluginName": "Prometheus" },
    { "name": "DS_LOKI", "label": "Loki", "type": "datasource", "pluginId": "loki", "pluginName": "Loki" }
  ],
  "title": "LogOps â€“ Clean Start",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "editable": true,
  "templating": {
    "list": [
      {
        "name": "level",
        "label": "Level",
        "type": "query",
        "datasource": "${DS_LOKI}",
        "refresh": 1,
        "hide": 0,
        "query": "label_values({app=\"logops\"}, level)",
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": { "selected": true, "text": "All", "value": ".*" }
      },
      {
        "name": "emitter",
        "label": "Emitter",
        "type": "query",
        "datasource": "${DS_LOKI}",
        "refresh": 1,
        "hide": 0,
        "query": "label_values({app=\"logops\"}, emitter)",
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": { "selected": true, "text": "All", "value": ".*" }
      }
    ]
  },
  "panels": [
    { "type": "row", "title": "Overview (Prometheus)", "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 } },

    {
      "type": "stat",
      "id": 1,
      "title": "EPS (accepted/s)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value", "graphMode": "none", "textMode": "auto" },
      "targets": [ { "expr": "sum(rate(logops_accepted_total[1m]))", "instant": true } ]
    },
    {
      "type": "stat",
      "id": 2,
      "title": "Accepted (5m)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value", "graphMode": "none", "textMode": "auto" },
      "targets": [ { "expr": "sum(increase(logops_accepted_total[5m]))", "instant": true } ]
    },
    {
      "type": "stat",
      "id": 3,
      "title": "Accepted (1h)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value", "graphMode": "none", "textMode": "auto" },
      "targets": [ { "expr": "sum(increase(logops_accepted_total[1h]))", "instant": true } ]
    },
    {
      "type": "stat",
      "id": 4,
      "title": "Accepted (24h)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value", "graphMode": "none", "textMode": "auto" },
      "targets": [ { "expr": "sum(increase(logops_accepted_total[24h]))", "instant": true } ]
    },
    {
      "type": "gauge",
      "id": 5,
      "title": "In-flight",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "min": 0, "max": 10,
          "thresholds": { "mode": "absolute", "steps": [ { "color": "green" }, { "color": "yellow", "value": 3 }, { "color": "red", "value": 7 } ] }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "showThresholdMarkers": true, "showThresholdLabels": false },
      "targets": [ { "expr": "logops_inflight", "instant": true } ]
    },

    {
      "type": "stat",
      "id": 6,
      "title": "Missing TS (5m)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 4, "w": 2, "x": 20, "y": 1 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [ { "expr": "sum(increase(logops_missing_ts_total[5m]))", "instant": true } ]
    },
    {
      "type": "stat",
      "id": 7,
      "title": "Missing TS (1h)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 4, "w": 2, "x": 22, "y": 1 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [ { "expr": "sum(increase(logops_missing_ts_total[1h]))", "instant": true } ]
    },

    {
      "type": "stat",
      "id": 8,
      "title": "Missing Level (5m)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 4, "w": 2, "x": 20, "y": 5 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [ { "expr": "sum(increase(logops_missing_level_total[5m]))", "instant": true } ]
    },
    {
      "type": "stat",
      "id": 9,
      "title": "Missing Level (1h)",
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 4, "w": 2, "x": 22, "y": 5 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [ { "expr": "sum(increase(logops_missing_level_total[1h]))", "instant": true } ]
    },

    { "type": "row", "title": "Trends (Loki)", "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 } },

    {
      "type": "timeseries",
      "id": 10,
      "title": "Accepted rate by level (1m rate)",
      "datasource": "${DS_LOKI}",
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 10 },
      "options": { "legend": { "displayMode": "table", "placement": "right", "showLegend": true } },
      "fieldConfig": {
        "defaults": { "custom": { "lineStyle": { "fill": "solid" }, "fillOpacity": 15, "stacking": { "mode": "normal", "group": "A" } } },
        "overrides": [
          { "matcher": { "id": "byName", "options": "ERROR" }, "properties": [ { "id": "color", "value": { "mode": "fixed", "fixedColor": "#E24D42" } } ] },
          { "matcher": { "id": "byName", "options": "WARN"  }, "properties": [ { "id": "color", "value": { "mode": "fixed", "fixedColor": "#EAB839" } } ] },
          { "matcher": { "id": "byName", "options": "INFO"  }, "properties": [ { "id": "color", "value": { "mode": "fixed", "fixedColor": "#7EB26D" } } ] },
          { "matcher": { "id": "byName", "options": "DEBUG" }, "properties": [ { "id": "color", "value": { "mode": "fixed", "fixedColor": "#1F78C1" } } ] }
        ]
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (level) (rate({app=\"logops\", level=~\"$level\", emitter=~\"$emitter\"}[1m]))",
          "legendFormat": "{{level}}"
        }
      ]
    },

    {
      "type": "timeseries",
      "id": 11,
      "title": "Logs per 15m by level (stacked bars)",
      "datasource": "${DS_LOKI}",
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 10 },
      "options": { "legend": { "displayMode": "table", "placement": "right", "showLegend": true } },
      "fieldConfig": {
        "defaults": { "custom": { "drawStyle": "bars", "barAlignment": 0, "fillOpacity": 60, "stacking": { "mode": "normal", "group": "A" } } },
        "overrides": [
          { "matcher": { "id": "byName", "options": "ERROR" }, "properties": [ { "id": "color", "value": { "mode": "fixed", "fixedColor": "#E24D42" } } ] },
          { "matcher": { "id": "byName", "options": "WARN"  }, "properties": [ { "id": "color", "value": { "mode": "fixed", "fixedColor": "#EAB839" } } ] },
          { "matcher": { "id": "byName", "options": "INFO"  }, "properties": [ { "id": "color", "value": { "mode": "fixed", "fixedColor": "#7EB26D" } } ] },
          { "matcher": { "id": "byName", "options": "DEBUG" }, "properties": [ { "id": "color", "value": { "mode": "fixed", "fixedColor": "#1F78C1" } } ] }
        ]
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (level) (count_over_time({app=\"logops\", level=~\"$level\", emitter=~\"$emitter\"}[15m]))",
          "legendFormat": "{{level}}"
        }
      ]
    },

    { "type": "row", "title": "Emitters & Raw", "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 17 } },

    {
      "type": "table",
      "id": 12,
      "title": "Top emitters (last 1h)",
      "datasource": "${DS_LOKI}",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 18 },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum by (emitter) (count_over_time({app=\"logops\", emitter=~\"$emitter\", level=~\"$level\"}[1h])) )",
          "legendFormat": "{{emitter}}"
        }
      ],
      "options": { "showHeader": true }
    },

    {
      "type": "logs",
      "id": 13,
      "title": "Live tail (filtered)",
      "datasource": "${DS_LOKI}",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 18 },
      "options": { "dedupStrategy": "none", "showLabels": true, "showTime": true, "sortOrder": "Descending", "wrapLogMessage": true },
      "targets": [ { "expr": "{app=\"logops\", level=~\"$level\", emitter=~\"$emitter\"}", "refId": "A" } ]
    }
  ]
}
